

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| 
  = devise_error_messages! 

  = render :partial=>'devise/shared/frm_user', :locals=>{:f=>f}

  = f.submit t(".update")

%h3= t('.cancel_my_account')

%p
  Unhappy? 
  = link_to t('.cancel_my_account'), registration_path(resource_name), :data => { :confirm => t('.cancel_confirm') }, :method => :delete 
  

= link_to t(".back"), :back 
